<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>cotizacionController</servlet-name>
        <servlet-class>controllers.cotizacionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>prod_serv_cotiController</servlet-name>
        <servlet-class>controllers.prod_serv_cotiController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminController</servlet-name>
        <servlet-class>controllers.adminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reportesPdfController</servlet-name>
        <servlet-class>controllers.reportesPdfController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>pqrsController</servlet-name>
        <servlet-class>controllers.pqrsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cotizacionController</servlet-name>
        <url-pattern>/cotizacionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>prod_serv_cotiController</servlet-name>
        <url-pattern>/prod_serv_cotiController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminController</servlet-name>
        <url-pattern>/adminController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reportesPdfController</servlet-name>
        <url-pattern>/reportesPdfController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>pqrsController</servlet-name>
        <url-pattern>/pqrsController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
